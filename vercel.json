{
    "version": 2,
    "builds": [
        {
            "src": "api/routes/**/*.js",
            "use": "@now/node"
        },
        {
            "src": "package.json",
            "use": "@now/static-build"
        }
    ],
    "build": {
        "env": {
            "API_URL": "https://bgadim.vercel.app"
        }
    },
    "routes": [
        { "src": "/api/hello(.*)", "headers":
            {
              "access-control-allow-origin": "*"
            }, "dest": "api/routes/hello" },
        { "src": "/api/(.*)", "headers":
            {
                "access-control-allow-origin": "*"
            }, "dest": "api/routes/$1" },
        { "src": "/api", "headers":
            {
                "access-control-allow-origin": "*"
            }, "dest": "api/routes/index.js" },
        { "src": "/_nuxt/.+", "headers": { "cache-control": "s-maxage=31536000" } },
        { "src": "/(.*)", "dest": "$1" }
    ]

}
